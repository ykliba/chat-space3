.main
  .group-info
    .group-info__left
      .group_name
        - current_user.groups.each do |group|
          = group.name
      .member
        Member:
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .group-info__right
      %p.btn
        = link_to edit_group_path(@group), class: "tag" do
          Edit
        
  
  .message-list
    = render @messages
    -# _message.html.haml呼び出し
    
  .form
    = form_for [@group, @message] do |f|
      .input
        = f.text_field :content, class: 'input__message', placeholder: 'type a message'
        .input__mask
          = f.label :image, class: 'input__mask__image' do
            = icon('fa', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
  
  
  
  
  
  
  
  
  
  
  

  
      
   
  
  
  
  
  
  
  
  
  
  
  
  
  
  
    
        
      
